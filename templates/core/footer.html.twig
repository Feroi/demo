<script>
  $(document).ready(function () {

    $('.datatable').DataTable({
      "language": {
        "url": "//cdn.datatables.net/plug-ins/1.10.16/i18n/Spanish.json"
      }
    });

    $("#provider_state").change(function () {

      var state = $(this).val();
      html = "";

      $.ajax({
        type: 'GET',
        url: '{{ path('app_provider_cities') }}',
        data: {
          state: state
        },
        success: function (data) {
          for (key in data) {
            html += "<option value=" + data[key] + ">" + key + "</option>"
          }
          $("#provider_city").html('');
          $("#provider_city").html(html);
        }
      });
    });

  });
</script>